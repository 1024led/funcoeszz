zzmeuip ()
{
	zzzz -h meuip $1 && return

	local URL="http://meuip.datahouse.com.br/"

	$ZZWWWDUMP "$URL" | grep -i "Meu ip " | grep -v "Home" | awk -F" " '{print $4}' 
}
